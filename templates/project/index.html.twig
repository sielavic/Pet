{% extends 'base.html.twig' %}

{% block title %}Detalle de la Tarea{% endblock %}

{% block body %}
    <div class="card" style="width: 92%; margin: auto;margin-top: 10px;">
    <div class="example-wrapper">
        <a href="{{ path('edit_project', {'id':project.id}) }}" data-bs-toggle="tooltip" data-bs-placement="bottom"
           data-bs-custom-class="custom-tooltip"
           data-bs-title="Редактировать проект"><i class="fa fa-cog fa-spin fa-3x fa-fw" style="color: #b9a25b;"></i></a>
        <h2 class="text-center">{{ project.projectName }}</h2>
        <p class="text-center">{{ project.description }}</p>
        <p class="text-center">Участники проекта:</p>
        <table class="table table-striped table-sm">
            <tr>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Email</th>
                <th>Действия</th>
            </tr>
        {% for user in users %}
                <tr>
                    <td>{{ user.name }}</td>
                    <td>{{ user.surname }}</td>
                    <td>{{ user.email }}</td>
                    <td class="buttons">
                        {% if not user is null  %}
                            <a href="{{ path('delete_man_project', {'id':user.id}) }}" onclick="return confirm('¿Вы уверены, что хотите исключить участника?')" class="btn-delete" style="text-decoration: none;">Исключить</a>
                        {% endif %}
                    </td>
                </tr>
        {% endfor %}
    </div>
    </div>


{% endblock %}