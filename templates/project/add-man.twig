{% extends 'base.html.twig' %}

{% block title %}Detalle de la Tarea{% endblock %}

{% block body %}
    <div class="card" style="width: 92%; margin: auto;margin-top: 10px;">

    <div class="example-wrapper">
        <a href="{{ path('edit_project', {'id':project.id}) }}" data-bs-toggle="tooltip" data-bs-placement="bottom"
           data-bs-custom-class="custom-tooltip"
           data-bs-title="Редактировать проект"><i class="fa fa-cog fa-spin fa-3x fa-fw" style="color: #b9a25b;"></i></a>
        <form class="form-inline" action="{{ path('search_men', {'id':project.id}) }}" style="width: fit-content;
    display: flex;
    float: right;padding: 10px;
" method="get">
            <div class="form-group mx-sm-3 mb-2">
                <input type="text" name="query" class="form-control"  placeholder="Введите поисковый запрос" required>
            </div>
            <button type="submit" class="btn btn-primary mb-2">Поиск</button>
        </form>
        <h2 class="text-center" style="margin: 33px;">{{ project.projectName }}</h2>

        <p class="text-center">{{ project.description }}</p>
        <p class="text-center">Участники без проекта:</p>
        <table class="table table-striped table-sm">
            <tr>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Email</th>
                <th>Действия</th>
            </tr>
        {% for user in users %}
                <tr>
                    <td>{{ user.name }}</td>
                    <td>{{ user.surname }}</td>
                    <td>{{ user.email }}</td>
                    <td class="buttons">
                        {% if not user is null  %}
                            <a href="{{ path('delete_man_project', {'id':user.id}) }}"  class="btn-delete" style="text-decoration: none;">Добавить в проект</a>
                        {% endif %}
                    </td>
                </tr>
        {% endfor %}
    </div>
    </div>


{% endblock %}